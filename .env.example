# Redis Cache Configuration
# Enable or disable caching (true/false)
CACHE_ENABLED=true

# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Use SSL/TLS for Redis connection (true/false)
REDIS_SSL=false

# Maximum number of Redis connections in pool
REDIS_MAX_CONNECTIONS=50

# Cache TTL (Time To Live) in seconds
# PDF cache TTL - how long to keep compiled PDFs (default: 24 hours)
PDF_CACHE_TTL=86400

# LaTeX content cache TTL - how long to keep generated LaTeX (default: 12 hours)
LATEX_CACHE_TTL=43200

# Application Settings
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum worker threads for async compilation
MAX_WORKERS=16

# Gunicorn Configuration (for production)
GUNICORN_WORKERS=16
GUNICORN_THREADS=4
ENVIRONMENT=production

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=20

# Celery Configuration (for background jobs)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_WORKERS=32
CELERY_CONCURRENCY=8

# Job Storage
JOB_RESULTS_ENABLED=true
JOB_RESULTS_TTL=3600

# Performance Tuning
WORKER_CONNECTIONS=2000
MAX_REQUESTS_PER_WORKER=10000
